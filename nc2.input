# Settings file for numsim program
# Run ./numsim driven_cavity.txt

# Problem description
geometryFile = naturalconvection_10x10.geom
endTime = 10000.0        # duration of the simulation
re = 20000             # Reynolds number
prandtl = 7.0 # Prandtl number
beta = 0.00021	 # Volumetric expansion coefficient beta = Ri / (g * Re^2)
gX = 0.    # external forces, set to (gX,gY) = (0,-9.81) to account for gravity
gY = -1.1

# Initial values
uInit = 0.0       # velocity u
vInit = 0.0       # velocity v
pInit = 0.0       # pressure
tInit = 0.0       # temperature

# Discretization parameters
useDonorCell = true   # if donor cell discretization should be used, possible values: true false
alpha = 0.5           # factor for donor-cell scheme, 0 is equivalent to central differences
tau = 0.5             # safety factor for time step width
gamma = 0.5
maximumDt = 2.0       # maximum values for time step width

# Solver parameters
pressureSolver = SOR  # which pressure solver to use, possible values: GaussSeidel SOR CG
omega = 1.7           # overrelaxation factor, only for SOR solver
epsilon = 1e-5       # tolerance for 2-norm of residual
maximumNumberOfIterations = 1e2    # maximum number of iterations in the solver

# Output parameters
outputFileEveryDt = 1000
